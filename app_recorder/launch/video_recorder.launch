<launch>
  <!-- start: arguments -->
  <arg name="video_path" />
  <arg name="video_title" />
  <arg name="video_topic_name" default="" />
  <arg name="use_compressed" default="false" />
  <arg name="video_compressed_topic_name" default="" />
  <arg name="video_fps" />
  <arg name="video_codec" default="XVID" />
  <!-- end: arguments -->

  <node if="$(arg use_compressed)"
        name="$(anon video_recorder_rgb_decompress)" pkg="image_transport" type="republish"
        args="compressed raw">
    <remap from="in" to="$(arg video_compressed_topic_name)" />
    <remap from="out" to="$(arg video_topic_name)" />
  </node>

  <node name="$(anon video_recorder)" pkg="image_view" type="video_recorder">
    <remap from="image" to="$(arg video_topic_name)" />
    <rosparam subst_value="true">
      filename: $(arg video_path)/$(arg video_title)
      stamped_filename: false
      fps: $(arg video_fps)
      codec: $(arg video_codec)
    </rosparam>
  </node>
</launch>
